<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
                name="viewmodel"
                type="com.example.floristbypo.viewmodels.UserProfileViewModel" />
    </data>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:visibility="visible">
        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_profile"
                   android:id="@+id/userProfileImg"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="8dp"
                   app:layout_constraintVertical_bias="0.036"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="8dp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp"/>
        <ImageView android:layout_width="18dp"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_edit"
                   android:layout_marginBottom="8dp"
                   android:layout_marginTop="8dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="@+id/userProfileImg"
                   app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                   app:layout_constraintHorizontal_bias="0.979"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genderTxt"
                android:text="@{viewmodel.user.gender}"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/userNameTxt" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:id="@+id/dobTxt"
                android:text="@{viewmodel.user.DOB}"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/genderTxt" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/userNameTxt"
                android:layout_marginTop="26dp"
                android:text="@{viewmodel.user.name}"
                app:layout_constraintTop_toBottomOf="@+id/userProfileImg"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>